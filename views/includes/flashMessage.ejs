<% if(success && success.length){ %>
    <center>
      <div class="alert alert-success alert-dismissible fade show"  role="alert" style="width:50%;margin: 10px 0 0 0;">
          <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>   
  </center>  
  <%  }  %>
  
  <% if(error && error.length){ %>
    <center>
      <div class="alert alert-warning alert-dismissible fade show"  role="alert" style="width:50%;margin: 10px 0 0 0;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div> 
    </center> 
  <%  }  %>